<div class="row">
	
	<div class="span12">
		<h1>Login to your Account</h1>
		<p>This page is used to sign into an account.</p>
		<hr/>
	</div>

	<div class="span6">
		<div class="well">
			<%= form_for :session, url: sessions_path, html: {class: 'responsive'} do |f| %>
			  <%= label_tag :email %>
			  <%= text_field_tag :email, params[:email] %>

			  <%= label_tag :password %>
			  <%= password_field_tag :password %>

			  <label class="checkbox">
			    <%= check_box_tag :remember_me, 1, params[:remember_me] %> remember me
			  </label>

			  <%= submit_tag "Log in", :class => 'btn btn-success mgn_t_10', id: 'new_session_submit_button' %>

			<% end %>
		</div>
	</div>
</div>