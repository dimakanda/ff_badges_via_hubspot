<%= simple_form_for [:admin, @badge], html: {class: 'responsive', multipart: true} do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :message %>
    <%= f.input :filename, hint: 'Filename where earning badge condition will be defined. Without .rb extension.' %>
    <%= f.input :points, as: :integer, input_html: {class: 'span1'}  %>
    <%= f.input :icon, as: :image_preview, input_html: {preview_version: :medium} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,  class: 'btn btn-success' %>
  </div>

<% end %>
